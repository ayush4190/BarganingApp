<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NegotiatorForm"
    android:orientation="vertical"
    android:padding="10dp">

    <!--phone number-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register"
            android:text="Profile details"
            android:textSize="20sp"
            android:textAlignment="center"
            android:background="@color/colorPrimary"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8sp"
            android:text="Phone Number"
            android:textSize="20sp"
            android:layout_marginTop="20sp" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone number"
            android:layout_marginLeft="8sp"
            android:id="@+id/phone"
            android:inputType="number"
            android:maxLength="10"

            android:singleLine="true"/>


        <!--phone number end-->

        <!--date of birth-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8sp"
            android:layout_marginTop="20sp"
            android:hint="Date of Birth"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8sp"
            android:layout_marginTop="20sp"
            android:hint="Select Date of Birth"
            android:textSize="20sp" />

        <!--date of birth end-->

        <!--gender-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8sp"
            android:layout_marginTop="20sp"
            android:text="Gender"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/gender"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            />
        <!--gender end-->


        <!--address -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8sp"
            android:layout_marginTop="20sp"
            android:text="Address"
            android:textSize="20sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="House/Flat/Office"
            android:layout_marginLeft="8sp"
            android:id="@+id/adlin1"
            android:singleLine="true"
            android:maxLength="15"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Street/Locality"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="8sp"
            android:id="@+id/adline2"
            android:singleLine="true"
            android:maxLength="35"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:hint="City"
            android:layout_marginLeft="8sp"
            android:id="@+id/adcity"

            android:singleLine="true"
            android:inputType="textCapSentences"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10sp">

            <EditText
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:hint="State"
                android:layout_marginLeft="8sp"
                android:id="@+id/adstate"
                android:singleLine="true"
                android:inputType="textCapSentences"
                android:maxLength="20"
                />
            <EditText

                android:layout_width="125sp"
                android:layout_height="wrap_content"
                android:hint="Pincode"
                android:layout_marginRight="8sp"
                android:layout_marginLeft="20sp"
                android:id="@+id/adpincode"
                android:inputType="number"
                android:singleLine="true"
                android:maxLength="6"
                />

        </LinearLayout>

        <!--address end-->


        <!--expertise-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select your area of expertise"
            android:textSize="24dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <Spinner
                android:id="@+id/area1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                />

            <Spinner
                android:id="@+id/area2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                />
            <Spinner
                android:id="@+id/area3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                />


        </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select your working hours"
        android:textSize="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        />

        <!--for working hours-->


        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/box1"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:checked="false" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"

                android:layout_marginTop="10dp"
                android:text="Morning"
                android:textSize="18dp" />


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/box2"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:checked="false" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"

                android:layout_marginTop="10dp"
                android:text="Afternoon"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/box3"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:checked="false" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"

                android:layout_marginTop="10dp"
                android:text="Evening"
                android:textSize="18dp" />


        </LinearLayout>


        <!--expertise end-->

        <!--profit share-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profit Share : "
            android:textSize="24dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/profit"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="24dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            />

        <!--profit share end-->

        <!--button-->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next->"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:background="@color/colorPrimary"
            android:id="@+id/next1"
            android:layout_marginLeft="300sp"/>
        <!--button end-->
    </LinearLayout>
</ScrollView>