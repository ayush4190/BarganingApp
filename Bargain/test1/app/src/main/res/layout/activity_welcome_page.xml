<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b10">

    <ImageButton
        android:id="@+id/shopper"
        android:layout_width="139dp"
        android:layout_height="152dp"
        android:background="#000"
        android:padding="30dp"
        app:srcCompat="@drawable/s2"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="220dp" />

    <ImageButton
        android:id="@+id/Negotiator"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="#000"
        app:srcCompat="@drawable/n3"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="220dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="384dp"
        android:layout_height="114dp"
        app:srcCompat="@drawable/logo1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOPPER"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="372dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEGOTIATOR"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="221dp"
        tools:layout_editor_absoluteY="372dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/we"
        tools:layout_editor_absoluteX="-11dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#FFF"
        android:text="Already an user? Login here."
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="434dp" />


</android.support.constraint.ConstraintLayout>